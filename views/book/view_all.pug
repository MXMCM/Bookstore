extends ../layout

block content
    h3 Books
    table
        thead
            tr
                th Title
                th Author
                th Publisher
                th Genre
                th Pages
        tbody
            each book in books
                tr
                    td= book.title
                    td= book.author
                    td= book.publisher
                    td= book.pages
                    td
                        a(href=`/books/profile/${book.id}`) View Book